
<div class="flex flex-col gap-2 m-4">
  <% @cels.each do |cel| %>
    <%= turbo_frame_tag cel do %>
      <div class="border p-4 rounded-lg flex gap-6 items-center bg-neutral-50 dark:bg-slate-800 border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100">
        <div class="flex gap-2 items-stretch h-full flex-1">
          <div class="text-lg font-semibold"><%= cel.name %></div>
          <div class="text-slate-500 dark:text-slate-400"><%= cel.url %></div>
        </div>
        <div class="flex gap-2">
          <%= link_to 'Edit', edit_cel_path(cel), class: 'px-3 py-1 rounded-lg bg-amber-100 dark:bg-amber-900 text-amber-800 dark:text-amber-200 text-sm' %>
          <%= button_to 'Delete', cel_path(cel), 
              method: :delete, 
              form: { data: { turbo_frame: '_top' } },
              data: { turbo_confirm: 'Voulez-vous vraiment supprimer ce CEL ?' }, 
              class: 'px-3 py-1 rounded-lg bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 text-sm' %>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="bg-neutral-50 dark:bg-slate-800 border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100">
    <%= render 'form', cel: Cel.new, submit_text: 'Ajouter un CEL', no_back: true %>
  </div>
</div>